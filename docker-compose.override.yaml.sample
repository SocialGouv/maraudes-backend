version: "3"

services:
  db:
    ports:
      - "5434:5432"
  graphql-engine:
    ports:
      - "8080:8080"
  redis:
    ports:
      - "6379:6379"
  api:
    build:
      context: ./packages/api
      dockerfile: Dockerfile
    ports:
      - "1337:1337"
    environment:
      DATABASE_URL: postgres://$POSTGRES_USER:$POSTGRES_PASSWORD@db:5432/$POSTGRES_DB
      REDIS_HOST: redis
      REDIS_PORT: 6379